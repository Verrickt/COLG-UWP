<UserControl
    x:Class="Colg_UWP.View.Controls.UserLoginTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Colg_UWP.View.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <Image Height="200" Width="200" Source="{x:Bind UserCredential.Avatar,Mode=OneWay}" Stretch="UniformToFill">
        </Image>
        <TextBlock VerticalAlignment="Center" Style="{StaticResource SubtitleTextBlockStyle}" Text="{x:Bind UserCredential.LoginName}"></TextBlock>
    </StackPanel>
</UserControl>
