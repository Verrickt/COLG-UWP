<local:MenuPage
    x:Class="Colg_UWP.View.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Colg_UWP.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Colg_UWP.ViewModel"
    xmlns:model="using:Colg_UWP.Model"
    xmlns:uwptoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Loaded="LoginPage_OnLoaded"
    mc:Ignorable="d"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup" >
                <VisualState x:Name="Narrow">
                    <VisualState.Setters>
                        <Setter Target="TopCommandBar.(FrameworkElement.Margin)">
                            <Setter.Value>
                                <Thickness>48,0,0,0</Thickness>
                            </Setter.Value>
                        </Setter>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Normal">
                 <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>




        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <CommandBar x:Name="TopCommandBar" >
           <CommandBar.Content>
               <TextBlock Margin="12,14" Text="登录"></TextBlock>
           </CommandBar.Content>
        </CommandBar>
        <RelativePanel Grid.Row="1" >
            <StackPanel  RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">
                <TextBlock HorizontalAlignment="Center" Text="快速登录" Visibility="{x:Bind SavedLoginDatas.Visibility,Mode=OneWay}" />
                <ListView Name="SavedLoginDatas" ItemsSource="{x:Bind VM.SavedLogins,Mode=OneWay}" 
                  SelectedItem="{x:Bind VM.QuickCredential,Mode=TwoWay,Converter={StaticResource GenericObjectConverter}}"  
                          SelectionMode="Single"
                          SelectionChanged="SavedLoginDatas_OnSelectionChanged"
                          HorizontalContentAlignment="Center"
                          Visibility="{x:Bind VM.SavedLogins.Count,Converter={StaticResource IntToVisibilityConverter},Mode=OneWay}"
                          Height="48"
                          ScrollViewer.VerticalScrollMode="Enabled"
                      Margin="10,5"
                      >

                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="model:Credential">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>

                                </Grid.ColumnDefinitions>
                                <uwptoolkit:ImageEx
                                Grid.Column="0"
                                Width="48"
                                Height="48"
                                Source="{x:Bind Avatar}"
                                Stretch="UniformToFill"
                                PlaceholderSource="../../Assets/ImagePlaceHolder.jpg"
                                PlaceholderStretch="UniformToFill"
                                
                                ></uwptoolkit:ImageEx>
                                <TextBlock Margin="15,0" TextTrimming="CharacterEllipsis" Grid.Column="1" 
                   Style="{StaticResource SubheaderTextBlockStyle}"
                   Text="{x:Bind LoginName,Mode=OneWay}" ></TextBlock>
                                <Button Grid.Column="2" Height="48" Width="48" 
                    Name="Delete"  Background="Transparent"
                                    Click="Delete_OnClick"
                    >
                                    <SymbolIcon Symbol="Delete"></SymbolIcon>

                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
                <StackPanel>
                    <TextBox Text="{x:Bind VM.CredentialVM.Credential.LoginName,Mode=TwoWay}"  Margin="10,5" HorizontalAlignment="Stretch" Name="UserName" PlaceholderText="用户名" >
                    </TextBox>
                    <PasswordBox Password="{x:Bind VM.CredentialVM.Credential.Password,Mode=TwoWay}" Margin="10,5"  HorizontalAlignment="Stretch" Name="Password" PlaceholderText="密码" PasswordRevealMode="Peek" ></PasswordBox>
                    <ComboBox Name="SecurityQuestionComboBox" Margin="10,5" 
                          HorizontalAlignment="Stretch" 
                          SelectedIndex="{x:Bind VM.CredentialVM.Credential.QuestionId,Mode=TwoWay}"
                          ItemsSource="{x:Bind VM.SecurityQuestions}"   
                          PlaceholderText="安全提问(未设置请忽略)"></ComboBox>
                    <TextBox  Margin="10,5"  Text="{x:Bind VM.CredentialVM.Credential.QuestionAnswer,Mode=TwoWay}"  PlaceholderText="问题答案"></TextBox>
                    <StackPanel  Margin="10,5" Orientation="Horizontal">
                        <Button Content="登录" Name="LoginButton" Click="LoginButton_OnClick" ></Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <ProgressRing RelativePanel.AlignVerticalCenterWithPanel="True"
                          RelativePanel.AlignHorizontalCenterWithPanel="True"
                          Height="48"
                          Width="48"
                          IsActive="{x:Bind VM.CredentialVM.UndergoingLogin,Mode=OneWay}"
                          ></ProgressRing>
        </RelativePanel>
    </Grid>
</local:MenuPage>
