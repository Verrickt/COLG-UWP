<Page
    x:Class="Colg_UWP.View.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Colg_UWP.View.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="using:Colg_UWP.ViewModel"
    xmlns:uwptoolkit="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls="using:Colg_UWP.View.Controls"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    SizeChanged="MainPage_OnSizeChanged">
    <Page.DataContext>
        <viewmodel:MainPageVM x:Name="VM"></viewmodel:MainPageVM>
    </Page.DataContext>
    <Page.Resources>
        <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Left"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <DataTemplate x:Key="MenuItemDateTemplate" x:DataType="viewmodel:MenuVM">
            <Grid Width="240" Height="48">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="{x:Bind Glyph}"></FontIcon>
                <TextBlock Grid.Column="1"
                           Text="{x:Bind DisplayName }" VerticalAlignment="Center">
                </TextBlock>
            </Grid>
        </DataTemplate>
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="0,0,0,0"></Setter>
        </Style>
        <Style x:Key="TransparentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Padding" Value="0"></Setter>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="Wide">
                    <VisualState.Setters>
                        <Setter Target="MySplitView.(SplitView.DisplayMode)" Value="CompactInline" />
                        <Setter Target="MySplitView.(SplitView.IsPaneOpen)" Value="True" />
                        <Setter Target="MenuFrame.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="ContentFrame.(Grid.ColumnSpan)" Value="1"/>
                        <Setter Target="ContentFrame.(Grid.Column)" Value="1"/>
                        <Setter Target="MenuFrame.(Grid.Column)" Value="0"/>
                        <Setter Target="relativePanel.(FrameworkElement.Width)" Value="240"/>

                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource WideMinWidth}" />
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Mormal">
                    <VisualState.Setters>
                        <Setter Target="MySplitView.(SplitView.DisplayMode)" Value="CompactOverlay" />
                        <Setter Target="MySplitView.(SplitView.IsPaneOpen)" Value="False" />
                        <Setter Target="MenuFrame.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="MenuFrame.(Grid.Column)" Value="0"/>
                        <Setter Target="ContentFrame.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="ContentFrame.(Grid.Column)" Value="0"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NormalMinWidth}"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="Narrow">
                    <VisualState.Setters>
                        <Setter Target="MySplitView.(SplitView.DisplayMode)" Value="Overlay" />
                        <Setter Target="MySplitView.(SplitView.IsPaneOpen)" Value="False" />
                        <Setter Target="MenuFrame.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="MenuFrame.(Grid.Column)" Value="0"/>
                        <Setter Target="ContentFrame.(Grid.ColumnSpan)" Value="2"/>
                        <Setter Target="ContentFrame.(Grid.Column)" Value="0"/>
                    </VisualState.Setters>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="{StaticResource NarrowMinWidth}"></AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <SplitView Name="MySplitView" Grid.Row="1" Grid.Column="0" OpenPaneLength="240" DisplayMode="CompactOverlay"
                   CompactPaneLength="48">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ListView Name="TopMenuList" IsItemClickEnabled="True" ItemClick="MenuList_ItemClick"
                              SelectionMode="None" ItemsSource="{x:Bind VM.TopMenuItems}"
                              ItemTemplate="{StaticResource MenuItemDateTemplate}">

                    </ListView>
                    <StackPanel Grid.Row="2" >
                        <Button Command="{x:Bind VM.JumpToUserAccountPage}"
                                Style="{StaticResource TransparentButtonStyle}"
                                CommandParameter="{x:Bind MenuFrame}"  >
                            <Grid Width="240" Height="48">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="48"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <Border BorderThickness="1"
                                        Height="26"
                                        Width="26"
                                    BorderBrush="{ThemeResource ApplicationForegroundThemeBrush}">
                                    <uwptoolkit:ImageEx
                                    Height="24"
                                    Width="24"
                                    
                                    PlaceholderSource="../../Assets/ImagePlaceHolder.jpg"
                                    PlaceholderStretch="UniformToFill"
                                    Name="AvatarImageEx"
                                    ></uwptoolkit:ImageEx>
                                </Border>
                                <TextBlock Grid.Column="1" Name="UserNameTextBlock" TextTrimming="CharacterEllipsis"
                           Text="登录" VerticalAlignment="Center">
                                </TextBlock>
                            </Grid>
                        </Button>
                        <Rectangle Width="240" Height="1" 
                                   
                                   Fill="{ThemeResource ApplicationForegroundThemeBrush}"></Rectangle>
                    </StackPanel>
                    <ListView Grid.Row="3" Name="BottomMenuList" IsItemClickEnabled="True" ItemClick="MenuList_ItemClick"
                              SelectionMode="None" ItemsSource="{x:Bind VM.BottomMenuItems}"
                              ItemTemplate="{StaticResource MenuItemDateTemplate}">

                    </ListView>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid Margin="0,-48,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="MenuFrameColumn" Width="*" MaxWidth="600"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Frame   Grid.Column="0" Name="MenuFrame">
                        <Frame.ContentTransitions>
                            <TransitionCollection>
                                <PopupThemeTransition />
                            </TransitionCollection>
                        </Frame.ContentTransitions>
                    </Frame>
                    <Frame  Grid.Column="1" Name="ContentFrame">
                        <Frame.ContentTransitions>
                            <TransitionCollection>
                                <NavigationThemeTransition></NavigationThemeTransition>
                            </TransitionCollection>
                        </Frame.ContentTransitions>
                    </Frame>
                </Grid>

            </SplitView.Content>
        </SplitView>
        <RelativePanel x:Name="relativePanel" Grid.Row="0" Width="48" HorizontalAlignment="Left" Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
            <Button Background="{ThemeResource SystemControlBackgroundAccentBrush}" 
                    Name="Humburger" Click="Humburger_Click" Height="48" Width="48"
                    RelativePanel.AlignVerticalCenterWithPanel="True"
                    Style="{StaticResource TransparentButtonStyle}"
                    >
                <Button.Content>
                    <FontIcon  FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;"></FontIcon>
                </Button.Content>
            </Button>
        </RelativePanel>


    </Grid>
</Page>
